<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailActivity" >

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/detail_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/content_description" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="не делает ничего" />

    <TextView
        android:id="@+id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/photo_view" />

    <TextView
        android:id="@+id/detail_text"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_name"
        android:layout_marginTop="55dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        android:textColor="#008080"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/detail_retweet_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_button"
        android:layout_alignLeft="@+id/detail_text"
        android:layout_marginLeft="14dp" />

    <TextView
        android:id="@+id/detail_favorited_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_button"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/detail_name" />

</RelativeLayout>