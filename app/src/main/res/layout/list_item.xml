<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tweet_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/tweet_author_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.2"
            android:contentDescription="@string/authors_picture_description_content" />

        <TextView
            android:id="@+id/tweet_author"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.3"
            android:gravity="left"
            android:orientation="horizontal"
            android:textColor="#008080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tweet_date"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:textSize="14sp"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tweet_text"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        android:textColor="#008080"
        android:textSize="14sp" />

    <!--  <ImageView
          android:id="@+id/tweet_media"
          android:layout_width="225dp"
          android:layout_height="175dp"
          android:layout_alignLeft="@+id/tweet_author"
          android:layout_below="@+id/tweet_text"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:contentDescription="@string/tweet_media_description" />
    -->

</LinearLayout>