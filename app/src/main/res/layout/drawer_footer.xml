<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_divider"/>

    <Button
        android:id="@+id/goToProfile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_profile_text"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        />

    <EditText
        android:id="@+id/goToProfile_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/goToProfile_hint"
        android:inputType="textAutoComplete"
        android:textColor="@color/bud_green"
        android:textColorHint="@color/amazon"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>