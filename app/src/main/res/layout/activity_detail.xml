 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_detail_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:fadeScrollbars = "false">


<RelativeLayout 
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailActivity" >

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/detail_text"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_alignRight="@+id/detail_date"
        android:layout_below="@+id/detail_date"
        android:layout_marginTop="24dp"
        android:autoLink="web"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        android:textColor="#008080"
        android:textSize="18sp" />

    <Button
        android:id="@+id/detail_retweet_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_text"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/detail_favorited_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detail_retweet_count"
        android:layout_alignBottom="@+id/detail_retweet_count"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/detail_retweet_count" />
    
     <Button
        android:id="@+id/detail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detail_favorited_count"
        android:layout_alignBottom="@+id/detail_favorited_count"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/detail_favorited_count" />

    <TextView
        android:id="@+id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_retweet_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/detail_favorited_count" />

    <ImageView
        android:id="@+id/detail_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_name"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/content_description" />

</RelativeLayout>

</ScrollView>