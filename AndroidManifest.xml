<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rtweel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="20" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.rtweel.cache.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rtweel.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="rtweel"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rtweel.activities.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name="com.rtweel.activities.TweetActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name="com.rtweel.twitteroauth.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name="com.rtweel.activities.SendTweetActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rtweel.filechooser.FileActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" />

        <service
            android:name="com.rtweel.services.TweetService"
            android:exported="false" />

        <receiver
            android:name="com.rtweel.services.TweetReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.rtweel.services.TweetReceiver.BROADCAST_ACTION" />
                <action android:name="com.rtweel.services.TweetReceiver.CANCEL_NOTIFICATION_ACTION" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.rtweel.sqlite.TweetContentProvider"
            android:authorities="com.rtweel.sqlite.TweetContentProvider"
            android:exported="false" />
    </application>

</manifest>